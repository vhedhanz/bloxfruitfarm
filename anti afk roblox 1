-- ====================
-- PROPERTI GUI UTAMA & FRAME UTAMA
-- ====================

ba.Parent = game.CoreGui
ba.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Frame Utama (ca) - Menampung semua elemen, menjadikannya Draggable
ca.Parent = ba
ca.Active = true
ca.BackgroundColor3 = Color3.new(0.196078, 0.196078, 0.196078) -- Warna latar belakang gelap
ca.BackgroundTransparency = 0 -- Transparan di luar header, akan diatur nanti
ca.Draggable = true -- Memungkinkan Frame dipindahkan
ca.Position = UDim2.new(0.5, -100, 0.2, 0) -- Tengah ke kiri sedikit, di bagian atas
ca.Size = UDim2.new(0, 200, 0, 100) -- Ukuran total Frame

-- ====================
-- HEADER DAN TOMBOL CLOSE
-- ====================

-- Label Judul (HeaderLabel)
HeaderLabel.Parent = ca
