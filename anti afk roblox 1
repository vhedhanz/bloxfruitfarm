-- ====================
-- INISIALISASI INSTANCE
-- ====================

wait(0.5)

local ba = Instance.new("ScreenGui")
local ca = Instance.new("Frame")            -- Frame Utama (Pengganti TextLabel Draggable)
local HeaderLabel = Instance.new("TextLabel") -- Label Judul
local CloseButton = Instance.new("TextButton") -- Tombol Close
local LineSeparator = Instance.new("Frame")    -- Garis Pemisah (Horizontal line)
local ContentFrame = Instance.new("Frame")     -- Frame Konten Utama

local PingText = Instance.new("TextLabel")     -- Label Ping
