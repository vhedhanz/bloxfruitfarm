-- ====================
-- LOGIKA FUNGSI (Mempertahankan fungsi inti dan menambahkan logika tampilan)
-- ====================

local bb = game:service'VirtualUser'
local Players = game:service'Players'
local LocalPlayer = Players.LocalPlayer
local RunService = game:service'RunService'
local HttpService = game:service'HttpService' -- Diperlukan untuk Ping (latency)
local startTime = tick()

-- LOGIKA ANTI-AFK (Dipertahankan)
LocalPlayer.Idled:Connect(function()
    bb:CaptureController()
    bb:ClickButton2(Vector2.new())
    StatusText.Text = "Jangan usir aku Roblox!" -- Pesan sementara
    wait(2)
    StatusText.Text = "Anti-AFK is Enabled" -- Kembalikan ke status awal
end)

-- LOGIKA UPDATE TAMPILAN (Ping, FPS, Timer)
RunService.Heartbeat:Connect(function(step)
    -- Update FPS
    local fps = math.floor(1 / step)
    FpsText.Text = "Fps: " .. fps
    
    -- Update Ping (Estimasi Latency)
    -- Cara termudah untuk mendapatkan ping adalah menggunakan LocalPlayer.NetworkPing
