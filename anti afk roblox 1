wait(0.5)

local Players = game:service'Players'
local LocalPlayer = Players.LocalPlayer
local RunService = game:service'RunService' 
local bb = game:service'VirtualUser'

local ba=Instance.new("ScreenGui") 
local ca=Instance.new("TextLabel")  -- Header (Draggable)
local da=Instance.new("Frame")      -- Kotak Konten
local _b=Instance.new("TextLabel")  -- Credit
local ab=Instance.new("TextLabel")  -- Status Anti-AFK
local FPSText = Instance.new("TextLabel")  -- Label untuk FPS
local CloseButton = Instance.new("TextButton") -- Tombol Close

-- INSTANCE UICorner
local HeaderCorner = Instance.new("UICorner")
local ContentCorner = Instance.new("UICorner")

-- ====================
-- PROPERTI GUI UTAMA & HEADER
-- ====================

-- PERBAIKAN PENTING: Mengubah parent ke PlayerGui agar GUI tampil
ba.Parent = LocalPlayer:WaitForChild("PlayerGui")
ba.ZIndexBehavior = Enum.ZIndexBehavior.Sibling 

-- Elemen Header (ca) 
ca.Parent=ba 
ca.Active=true 
ca.BackgroundColor3=Color3.new(0, 0, 0) 
ca.Draggable=true 
ca.Position=UDim2.new(0.5, -100, 0.2, 0) -- Posisi disesuaikan agar di tengah
ca.Size=UDim2.new(0,200,0,25) -- Tinggi disesuaikan
ca.Font=Enum.Font.SourceSansSemibold 
ca.Text="Anti Afk By hassanxzayn" -- Teks disesuaikan
ca.TextColor3=Color3.new(0,1,1) 
ca.TextSize=16

-- UICorner untuk Header
HeaderCorner.CornerRadius = UDim.new(0, 6) -- Radius 6 pixel
HeaderCorner.Parent = ca

-- Tombol Close
CloseButton.Parent = ca
CloseButton.BackgroundColor3 = Color3.new(0.8, 0, 0)  -- Merah gelap
CloseButton.Size = UDim2.new(0, 20, 1, 0) -- Tinggi penuh header
CloseButton.Position = UDim2.new(1, -20, 0, 0)
CloseButton.Font = Enum.Font.SourceSansBold
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.new(1, 1, 1)
CloseButton.TextSize = 18

-- Elemen Frame (da) - Kotak Konten
da.Parent=ca 
da.BackgroundColor3=Color3.new(0, 0, 0) 
da.Position=UDim2.new(0,0,1,0) -- Tepat di bawah Header
da.Size=UDim2.new(0,200,0,75) -- Tinggi disesuaikan untuk 3 baris

-- UICorner untuk Konten (Pastikan hanya membulatkan sudut bawah jika Header dan Konten menyatu)
ContentCorner.CornerRadius = UDim.
